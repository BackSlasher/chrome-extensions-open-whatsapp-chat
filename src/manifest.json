{
    "name": "Open Whatsapp Chat",
    "short_name": "open-whatsapp-chat",
    "description": "Select a phone number to start a WhatsApp chat with it",
    "homepage_url": "http://chrome.google.com/webstore",
    "version": "0.0.1",
    "manifest_version": 3,
    "default_locale": "en",
    "minimum_chrome_version": "88",
    "permissions": [
      "contextMenus",
      "storage",
      "notifications"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab":false 
    },
    "icons": {
        "128": "assets/img/128x128.png"
    },
    "firefox": {
      "background": {
        "scripts": ["background.js"]
      },
      "browser_specific_settings": {
        "gecko": {
          "id": "open-whatsapp-chat@backslasher.net"
        }
      }
    },
    "chrome": {
      "background": {
          "service_worker": "background.js"
      }
    },
    "action": {
        "default_icon": {
            "16": "assets/img/16x16.png",
            "24": "assets/img/24x24.png",
            "32": "assets/img/32x32.png"
        },
        "default_title": "Open Whatsapp Chat"
    }
}
